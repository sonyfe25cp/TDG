<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omartech.tdg.mapper.ProductCategoryMapper">
	
	<select id="getProductCategories" parameterType="int" resultType="ProductCategory">
		select cid as id, name, parentId, isParent from itemcat where parentId = #{parentId};
	</select>
	
	
</mapper>